<script>
document.addEventListener('DOMContentLoaded', function() {
  let activeStep = 1;
  
  // Update step button styles
  function updateStepButtons() {
    const buttons = document.querySelectorAll('[data-step]');
    buttons.forEach(button => {
      const step = parseInt(button.dataset.step);
      if (step === activeStep) {
        button.className = 'px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 bg-[#386641] text-white';
      } else {
        button.className = 'px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 bg-[#386641]/10 text-[#386641] hover:bg-[#386641]/20';
      }
    });
  }
  
  // Scroll to step function
  function scrollToStep(step) {
    const element = document.getElementById('step-' + step);
    if (element) {
      element.scrollIntoView({ behavior: 'smooth', block: 'start' });
      activeStep = step;
      updateStepButtons();
    }
  }
  
  // Update active step based on scroll position
  function updateActiveStep() {
    const sections = document.querySelectorAll('[id^=step-]');
    const scrollPos = window.scrollY + 200;
    
    let currentStep = 1;
    sections.forEach((section, index) => {
      const rect = section.getBoundingClientRect();
      const sectionTop = rect.top + window.scrollY;
      
      if (scrollPos >= sectionTop) {
        currentStep = index + 1;
      }
    });
    
    if (currentStep !== activeStep) {
      activeStep = currentStep;
      updateStepButtons();
    }
  }
  
  // Throttle scroll events
  let ticking = false;
  function handleScroll() {
    if (!ticking) {
      requestAnimationFrame(() => {
        updateActiveStep();
        ticking = false;
      });
      ticking = true;
    }
  }
  
  // Add click handlers to step buttons
  const buttons = document.querySelectorAll('[data-step]');
  buttons.forEach(button => {
    button.addEventListener('click', () => {
      const step = parseInt(button.dataset.step);
      scrollToStep(step);
    });
  });
  
  // Listen for scroll events
  window.addEventListener('scroll', handleScroll);
  
  // Initial setup
  updateStepButtons();
  setTimeout(updateActiveStep, 100);
});
</script>

