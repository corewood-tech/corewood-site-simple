<section id="hero" class="relative min-h-screen flex flex-col items-center justify-center overflow-hidden">
  <!-- Background logo mark — fills hero -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
    {% image "./src/static/corewood_symbol_transparent_ON-DARK.png", "Corewood logo", "90vh", "h-[90vh] w-[90vh] object-contain opacity-[0.04]", "600,900,1200", "eager" %}
  </div>

  <!-- Content — vertically centered -->
  <div class="relative z-10 text-center px-4 md:px-6 max-w-5xl mx-auto">
    <!-- Primer line -->
    <p class="text-cream-600 text-[10px] sm:text-xs md:text-sm uppercase tracking-[0.2em] md:tracking-[0.35em] font-body font-medium mb-3 md:mb-4">
      Software Consulting for Founders
    </p>

    <!-- Company name -->
    <h1 id="hero-title" class="opacity-0 transition-opacity duration-1000 ease-out">
      <span class="block font-display font-bold text-[2.5rem] sm:text-6xl md:text-8xl lg:text-9xl tracking-[0.08em] sm:tracking-[0.12em] md:tracking-[0.15em] uppercase text-cream-100 leading-none">Corewood</span>
      <span class="block mt-2 md:mt-5 font-display font-light text-base sm:text-xl md:text-2xl lg:text-3xl tracking-wide text-cream-300">
        <span id="hero-left" class="inline-block transition-all duration-700 ease-out translate-x-[-30vw] opacity-0">Hard Problems.</span>
        <span id="hero-dot" class="inline-block mx-1 md:mx-4 text-cream-600 opacity-0 transition-opacity duration-500 ease-out">&middot;</span>
        <span id="hero-right" class="inline-block transition-all duration-700 ease-out translate-x-[30vw] opacity-0">Simple Solutions.</span>
      </span>
    </h1>

    <!-- Description -->
    <p class="mt-6 md:mt-10 text-cream-300 text-base md:text-lg leading-relaxed max-w-3xl mx-auto">
      Corewood builds AI systems, geospatial platforms, and security architecture for founders who need production-grade from day one.
    </p>

    <!-- Single CTA -->
    <div class="mt-8 md:mt-12">
      <a href="{{ '/schedule-meeting/' | url }}" class="btn-primary text-center inline-block">
        <span class="block text-sm md:text-base font-medium">Schedule a Consultation</span>
      </a>
    </div>
  </div>

</section>
