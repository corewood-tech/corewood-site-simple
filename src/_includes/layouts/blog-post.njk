---
layout: layouts/base.njk
---

{% include "components/header.njk" %}
<main class="pt-32 pb-24">
  <div class="container px-4 mx-auto max-w-4xl">
    <article class="font-sans text-gray-800 leading-relaxed">
      <header class="mb-12 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">{{ title }}</h1>
        <div class="flex flex-wrap justify-center items-center gap-4 text-sm text-muted-foreground">
          <time datetime="{{ date | date('%Y-%m-%d') }}">{{ date | dateDisplay }}</time>
          <span>•</span>
          <span>{{ content | readingTime }}</span>
        </div>
      </header>
      
      <div class="prose mx-auto">
        {{ content | safe }}
      </div>
      
      <footer class="mt-16 pt-8 border-t border-border">
        <div class="flex justify-between items-center">
          <a href="{{ '/blog/' | url }}" class="text-[#386641] hover:underline">← Back to Blog</a>
          <div class="flex gap-4">
            <a href="https://twitter.com/intent/tweet?url={{ page.url | url | absoluteUrl(site.url) | urlencode }}&text={{ title | urlencode }}" 
               class="text-[#386641] hover:underline" target="_blank" rel="noopener">
              Share on Twitter
            </a>
            <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ page.url | url | absoluteUrl(site.url) | urlencode }}" 
               class="text-[#386641] hover:underline" target="_blank" rel="noopener">
              Share on LinkedIn
            </a>
          </div>
        </div>
      </footer>
    </article>
  </div>
</main>
{% include "components/footer.njk" %} 
