---
layout: layouts/base.njk
ogType: article
---

{% include "components/header.njk" %}
{% include "components/breadcrumbs.njk" %}
<main class="pt-40 pb-24">
  <div class="container px-4 mx-auto max-w-6xl">
    <div class="flex gap-12">
      <!-- Main content -->
      <article class="flex-1 max-w-3xl">
        <header class="mb-12">
          <h1 class="text-4xl md:text-5xl font-display font-bold text-cream-100 mb-6">{{ title }}</h1>
          <div class="flex flex-wrap items-center gap-4 text-sm text-cream-600">
            <time datetime="{{ date | date('%Y-%m-%d') }}">{{ date | dateDisplay }}</time>
            <span class="text-forest-500">•</span>
            <span>{{ content | readingTime }}</span>
          </div>
        </header>

        <div class="prose prose-lg">
          {{ content | safe }}
        </div>

        {% include "components/rootstock-ad-article.njk" %}

        <footer class="mt-16 pt-8 border-t border-forest-700">
          <div class="flex justify-between items-center">
            <a href="{{ '/blog/' | url }}" class="text-morpho-400 hover:text-morpho-300 transition-colors">← Back to Blog</a>
            <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ page.url | url | absoluteUrl(site.url) | urlencode }}"
               class="text-morpho-400 hover:text-morpho-300 transition-colors" target="_blank" rel="noopener">
              Share on LinkedIn
            </a>
          </div>
        </footer>
      </article>

      <!-- Sidebar — desktop only -->
      <aside class="hidden lg:block w-64 flex-shrink-0">
        <div class="sticky top-32">
          <h3 class="text-sm font-medium text-cream-600 uppercase tracking-wider mb-4">Recent Posts</h3>
          <nav class="space-y-3">
            {% for post in collections.blog | head(8) %}
            <a href="{{ post.url | url }}"
               class="block text-sm {% if post.url == page.url %}text-morpho-400{% else %}text-cream-400 hover:text-cream-100{% endif %} transition-colors">
              {{ post.data.title }}
            </a>
            {% endfor %}
          </nav>

          {% include "components/rootstock-ad-sidebar.njk" %}
        </div>
      </aside>
    </div>
  </div>
</main>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BlogPosting",
      "headline": "{{ title | jsonEscape }}",
      "description": "{{ description | jsonEscape }}",
      "url": "{{ page.url | url | absoluteUrl(site.url) }}",
      "datePublished": "{{ date | date('%Y-%m-%d') }}",
      "dateModified": "{{ date | date('%Y-%m-%d') }}",
      "author": { "@type": "Person", "name": "Mickey", "url": "{{ site.url }}/about/" },
      "publisher": {
        "@type": "Organization",
        "name": "Corewood",
        "logo": { "@type": "ImageObject", "url": "{{ site.url }}/meta.png" }
      },
      "image": "{{ (ogImage or '/meta.png') | url | absoluteUrl(site.url) }}",
      "mainEntityOfPage": { "@type": "WebPage", "@id": "{{ page.url | url | absoluteUrl(site.url) }}" },
      "inLanguage": "en-US",
      "wordCount": "{{ content | striptags | wordcount }}",
      "articleSection": "Technology"{% if keywords %},
      "keywords": "{{ keywords | jsonEscape }}"{% endif %}
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "{{ site.url }}/" },
        { "@type": "ListItem", "position": 2, "name": "Blog", "item": "{{ site.url }}/blog/" },
        { "@type": "ListItem", "position": 3, "name": "{{ title | jsonEscape }}" }
      ]
    }
  ]
}
</script>
{% include "components/footer.njk" %}
